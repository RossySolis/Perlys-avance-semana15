---
import Layout from '../layouts/Layout.astro';
import '../styles/estilos.css';
import Footer from '../components/footer.astro';
---

<Layout>
  
<main style="padding-top: 70px;"></main>
  <main class="cotizacion-page">
    <!-- Hero Cotización -->  
    <header class="py-5 text-center">
      <div class="container">
        <h1 class="display-4 fw-bold animate-fade">Solicitud de Cotización</h1>
        <p class="lead animate-fade delay-03">Rellena el formulario y recibe tu presupuesto al instante</p>
      </div>
    </header>

    <!-- Formulario de Cotización -->
    <section class="py-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-7">
            <div class="card shadow-sm border-0 rounded-4 p-4 animate-fade delay-05">
              <form>
                <div class="mb-3">
                  <label for="nombre" class="form-label">Nombre:</label>
                  <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Ingresa tu nombre" required>
                </div>

                <div class="mb-3">
                  <label for="dni-ruc" class="form-label">DNI / RUC:</label>
                  <input type="text" id="dni-ruc" name="dni-ruc" pattern="\d{8}|\d{11}" title="Ingrese un DNI de 8 dígitos o un RUC de 11 dígitos" class="form-control" placeholder="Ej: 12345678 o 12345678901" required>
                </div>

                <div class="mb-3">
                  <label for="producto" class="form-label">Producto:</label>
                  <input type="text" id="producto" name="producto" class="form-control" placeholder="Producto que deseas cotizar" required>
                </div>

                <div class="mb-3">
                  <label for="cantidad" class="form-label">Cantidad:</label>
                  <input type="number" id="cantidad" name="cantidad" min="1" class="form-control" placeholder="Cantidad deseada" required>
                </div>

                <button type="submit" class="enviar-btn w-100">Enviar Cotización</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>

  <!-- Bootstrap JS -->
  <script src="/js/bootstrap.bundle.min.js" is:inline></script>
<Footer />
</Layout>
  <style>
    @import '../styles/cotizacion.css';
  </style>
